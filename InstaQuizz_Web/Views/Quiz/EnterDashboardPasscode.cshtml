@{
    Layout = null;
}

<div class="container mt-5">
    <h2>Enter Passcode to Access Quiz Dashboard</h2>

    <form method="post" action="/Quiz/ValidateDashboardPasscode">
        <input type="hidden" name="quizId" value="@ViewBag.QuizId" />

        <div class="form-group">
            <label for="passcode">Enter Passcode:</label>
            <input type="text" class="form-control" name="passcode" required />

            <!-- Display error message if the passcode is incorrect -->
            @if (ViewData.ModelState["Passcode"] != null)
            {
                <span class="text-danger">@ViewData.ModelState["Passcode"].Errors[0].ErrorMessage</span>
            }
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
